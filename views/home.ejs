<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div id="appName">
        <h1>todoTracker</h1>
    </div>
    
    <div id="main-container">
        <!-- ACTIONS -->
        <div id="action-container">

            <form action="/create-task" method="POST">
                <input class="form-control" type="text" name = "description" placeholder="Enter Task" required> 
                <select class="form-select form-select-sm" name="category" placeholder="Select Category" required>
                  <option selected>Personal</option>
                  <option value="1">Office Work</option>
                  <option value="2">Gym</option>
                  <option value="3">Others</option>
                </select>
                <div id="datePicker"><input type="date" name="date" placeholder="Date" required></div>
                <button type="submit" class="btn btn-outline-success">+ADD</button>
                <!-- <button type="submit">+ADD</button> -->
            </form>
            <!-- <script type="text/javascript"src="/js/home.js"></script> -->
        </div>
        <!-- VIEWS -->
        <div id="list-container">
            <form action="/delete-task" method="GET">
                <table class="table table-light table-striped table-hover">
                    <thead>
                      <tr>
                        <th scope="col">Select</th>
                        <th scope="col">Task</th>
                        <th scope="col">Category</th>
                        <th scope="col">Date</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% for(let i of task) { %>
                      <tr>
                        <td><input type="checkbox" name="<%= i._id %>"></td>
                        <td><p id="task-description"><%= i.description %></p></td>
                        <td><p id="task-category"><%= i.category %></p></td>
                        <td><p id="due-date"><%= i.date %></p></td>
                      </tr>
                    <% } %>
                    </tbody>
                  </table>
                  <!-- OLD -->
                <div><input type="submit" class="btn btn-danger" value="DELETE TASK"></div>
            </form>  
        </div>        
    </div>

    <script type="text/javascript"src="/js/home.js"></script>
</body>
</html>